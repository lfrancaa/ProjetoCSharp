@model AgenciaDeViagens_MVC_Dot_Net.Models.Passagem

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/Passagem.css" asp-append-version="true" />
<h1>Editar Passagem</h1>

<h4>Passagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PassagemId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeLocalOrigem" class="control-label"></label>
                <input asp-for="NomeLocalOrigem" class="form-control" />
                <span asp-validation-for="NomeLocalOrigem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeLocalDestino" class="control-label"></label>
                <input asp-for="NomeLocalDestino" class="form-control" />
                <span asp-validation-for="NomeLocalDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataViagemIda" class="control-label"></label>
                <input asp-for="DataViagemIda" class="form-control" />
                <span asp-validation-for="DataViagemIda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataViagemVolta" class="control-label"></label>
                <input asp-for="DataViagemVolta" class="form-control" />
                <span asp-validation-for="DataViagemVolta" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
