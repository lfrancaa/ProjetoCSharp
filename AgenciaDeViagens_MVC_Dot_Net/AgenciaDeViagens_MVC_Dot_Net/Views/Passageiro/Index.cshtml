@model IEnumerable<AgenciaDeViagens_MVC_Dot_Net.Models.Passageiro>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Cadastro.css" asp-append-version="true" />
<!-- INÍCIO DO BANNER -->
        <div class="position-relative overflow-hidden md-1 md-1">
            <img src="../../IMG/Passaporte.jpg" style="height: 750px; width: 100%;">
        </div>
        <!-- FIM DO BANNER -->

<h1>Listagem de Clientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PassageiroId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PassageiroId">Detalhar</a> |
                    <a asp-action="Delete" asp-route-id="@item.PassageiroId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Passageiro</a>
</p>
